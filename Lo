-- For SQL Server
USE Netsparker;
GO

-- For MySQL
USE Netsparker;

-- For PostgreSQL
SET search_path TO Netsparker;

-- Unified query for SQL Server, MySQL, and PostgreSQL
SELECT TABLE_NAME, COLUMN_NAME 
FROM INFORMATION_SCHEMA.COLUMNS 
WHERE (TABLE_NAME LIKE '%log%' 
    OR TABLE_NAME LIKE '%activity%' 
    OR TABLE_NAME LIKE '%event%')
   OR (COLUMN_NAME LIKE '%log%' 
    OR COLUMN_NAME LIKE '%activity%' 
    OR COLUMN_NAME LIKE '%event%');


USE Netsparker;

SELECT 
    User,
    Action,
    Endpoint_Type,
    Date
FROM 
    activity_logs
ORDER BY 
    Date DESC;

